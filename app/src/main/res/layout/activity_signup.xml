<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_google_signin_btn_text_dark_default">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:srcCompat="@drawable/rhapsodytitle"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/textView"
        android:gravity="left"
        android:layout_marginLeft="55dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:text="Create your Account" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_marginTop="1dp"
        android:textSize="15sp"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_focused"
        android:fontFamily="@font/roboto_light"/>
    <EditText
        android:id="@+id/etStudentID"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15sp"
        android:inputType="number"
        android:hint="Student ID"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_light"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_focused"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_light"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_focused"/>
    <EditText
        android:id="@+id/etNumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:textSize="15sp"
        android:inputType="textPersonName"
        android:hint="Number"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_focused"/>

    <EditText
        android:id="@+id/etPassowrd"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15sp"
        android:inputType="textPersonName"
        android:hint="Password"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_focused"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="Sign Up"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/cardview_light_background"
        android:background="@drawable/rounded_button2"
        android:fontFamily="@font/roboto_light"/>


    <ProgressBar
        android:layout_marginTop="40dp"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>